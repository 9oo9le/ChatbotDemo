<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="13dp" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity" >

        <ImageView
            android:id="@+id/iv_userhead_other"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
			android:background="@drawable/robot_icon"
            android:scaleType="fitXY" />

        <LinearLayout 
            android:background="@drawable/chatfrom_bg"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_toRightOf="@id/iv_userhead_other"
            android:orientation="horizontal"
            android:minHeight="50dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/received_message">
                <ImageView
		            android:id="@+id/iv_voice_other"
		            android:layout_width="@dimen/size_voice_image"
		            android:layout_height="@dimen/size_voice_image"
		            android:layout_gravity="center_vertical"
		            android:src="@drawable/icon_voice_left3"
		            android:scaleType="fitXY" />
                <TextView
	                android:maxWidth="210.0dip"
	                android:gravity="left|center"
	                android:id="@+id/tv_chatcontent_other"
	                android:layout_marginTop="1dp"
	                android:layout_marginRight="@dimen/margin_chat_activity"
	                android:layout_marginBottom="1dp"
	                android:layout_marginLeft="7dp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:lineSpacingExtra="2dp"
	                android:textColor="#ff000000"
	                android:textSize="15sp" />
            
        </LinearLayout>
       
    </RelativeLayout>

</LinearLayout>