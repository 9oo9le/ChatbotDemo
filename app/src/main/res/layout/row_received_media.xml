<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="13dp" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity" >

        <ImageView
            android:id="@+id/iv_userhead_media"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:background="@drawable/robot_icon"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:scaleType="fitXY" />

        <LinearLayout
            android:background="@drawable/chatfrom_bg"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_toRightOf="@id/iv_userhead_media"
            android:orientation="horizontal"
            android:minHeight="50dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/received_message">
               <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="7dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" >

                <LinearLayout
                    android:id="@+id/zi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_remote_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:maxWidth="80dip" />

                    <TextView
                        android:id="@+id/tv_remote_artist"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dip"
                        android:textColor="#999999"
                        android:textSize="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/line_music"
                    android:layout_toRightOf="@id/zi"
                    android:background="#cccccc"
                    android:layout_width="1dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_height="35dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/line_music"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >
                    <ImageView
                        android:id="@+id/iv_remote_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>